@using Viivalista.Models

@model List<Vuoro>

@{
    ViewData["Title"] = "Paivalista";
}

<h2>Päivälista</h2>
<select name="paiva">
    <option>1.10.2017</option>
</select>
<br />
@using (Html.BeginForm("Tallenna", "Home", FormMethod.Post)) { 
<table style="width:100%">
    <tr>
        <th style="width:15%">Työntekijä</th>
        @for (int i = 0; i < 12; i++)
        {
            <th style="width:100px">@(i + 7)</th>
        }

    </tr>
    @{List<Tyontekija> tt = ViewData["tyontekijat"] as List<Tyontekija>;}
    @for (int i = 0; i < tt.Count; i++)
    {
        <tr>
            <td>@tt[i].Nimi</td>
            @for (int j = 0; j < 12; j++)

            {
                //@Html.HiddenFor(v => v.Alku)
                <td style="width:100px">@Html.DropDownListFor(v => v[j].Tyopiste, new SelectList(tt[i].Tyopisteet.Where(x => x.Allowed == true), "Nimi", "Nimi"), String.Empty, new { @style = "width:100%" })</td>

            }

        </tr>
    }
    
</table>
<br />
<button>Tallenna</button>
}