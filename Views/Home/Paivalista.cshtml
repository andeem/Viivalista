@using Viivalista.Models

@model IEnumerable<Tyontekija>

@{
    ViewData["Title"] = "Paivalista";
}

<h2>Päivälista</h2>
<select name="paiva">
    <option>1.10.2017</option>
</select>
<br />
<table style="width:100%">
    <tr>
        <th style="width:15%">Työntekijä</th>
        @for (int i = 0; i < 12; i++)
        {
            <th style="width:100px">@(i+7)</th>
        }

    </tr>
    @foreach (var t  in ViewData["tyontekijat"] as IEnumerable<Tyontekija>)
    {
        <tr>
            <td>@t.Nimi</td>
            @for (int i = 0; i < 12; i++)
            {
                <td style="width:100px">@Html.DropDownList("Nimi", new SelectList(t.luvat,"Nimi", "Nimi"), String.Empty, new { @style = "width:100%" })</td>
            }

        </tr>
    }
    
</table>
<br />
<button>Tallenna</button>