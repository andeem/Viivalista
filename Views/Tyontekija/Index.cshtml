@using Viivalista.Models;
@model IEnumerable<Tyontekija>
@{
    
    ViewData["Title"] = "Työntekijät";

}
<h2>@ViewData["Title"]</h2>
<a asp-controller="Tyontekija" asp-action="Lisaa" class="btn btn-default">Lisää työntekijä</a>
<br />
<table style="width:100%">
    <tr>
        <th>Nimi</th>
        <th>Ryhmä</th>
    </tr>
    @foreach(var t in Model)
    {
        <tr>
            <td><a asp-area="" asp-controller="Tyontekija" asp-action="Nayta" asp-route-id=@t.Id>@t.Nimi</a></td>
            <td>@t.Tyontekijaryhma</td>
        </tr>

    }
</table>